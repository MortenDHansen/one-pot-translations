{
    "name": "mortendhansen/one-pot-translations",
    "description": "Not so fancy translations to be managed by the users",
    "type": "library",
    "require": {
        "illuminate/support": "^9.26|^10.0",
        "php": "7.4|8.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.16",
        "orchestra/testbench": "^7.40.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Mortendhansen\\OnePotTranslations\\": "src/"
        },
        "files": [
            "src/OPT.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MortenDHansen\\OnePotTranslations\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Morten D. Hansen",
            "email": "morten@visia.dk"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
